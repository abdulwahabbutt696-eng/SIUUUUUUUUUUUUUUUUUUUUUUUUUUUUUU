n = 5  # height of the triangle

for i in range(1, n + 1):
    spaces = n - i

    # First row
    if i == 1:
        print(" " * spaces + "*")

    # Second row
    elif i == 2:
        print(" " * spaces + "* *")

    # Last row
    elif i == n:
        print("* " * n)

    # Middle rows
    else:
        middle = " ".join(["*"] * (i - 1))
        print(" " * spaces + middle)
